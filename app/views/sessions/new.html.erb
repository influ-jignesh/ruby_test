<h2 class="text-center m-4">Login</h2>


<%= form_with(scope: :session, url: login_path, class: "shadow p-3 bg-info text-white",local: true) do |f|%>

	<div class="form-group row">
		<%= f.label :email, class: 'col-sm-2 col-form-label'%>
		<div class="col-sm-10">
		<%= f.email_field :email, rows:2, class: "form-control" %>
		</div>
	</div>
	<div class="form-group row">
		<%= f.label :password, class: 'col-sm-2 col-form-label'%>
		<div class="col-sm-10">
		<%= f.password_field :password, rows:2, class: "form-control" %>
		</div>
	</div>
	  <div class="form-group row justify-content-center">
	    <div class="col-sm-10">
	    	<%= f.submit "Login", class: "btn btn-success"%>			    		      
	    </div>
	  </div>		
<% end %>
